<!DOCTYPE html>
<html lang="en">
<head>
    <base href="http://localhost:3000" />
    <%- include('../partials/head'); %>
    <title>Trao đổi token</title>
    <script src="./scripts/web3.js"></script>
    <script src="./transfer.js"></script>
    <style>
        #bcname, #bcsymbol, #bcdecimal, #metamaskStatus {width: 300px;}
        .center-parent {
          text-align: center;
        }
    </style>
</head>
<body>
    <header>
        <%- include('../partials/header'); %>
    </header>
    <main>
        <h1 class="center-parent" >
            Trang trao đổi token
        </h1>
        <div class="center-parent">
        <a href="/transfer/exchange"> 
            <button class="btn btn-primary" > Chuyển token </button>
        </a>
        <a href="/transfer/reward"> 
            <button class="btn btn-primary" > Đổi thưởng </button>
        </a>
        <br>
        <h2>Thông tin hệ thống</h2>
        <button type="button" class="btn btn-primary" id="show">
            Hiện
        </button>
    </div>
        <table class="table">
            <tr>
                <th scope="col"> Trạng thái kết nối MetaMask</th>
                <td scope="row">
                    <input class="form-control" id="metamaskStatus" readonly>
                </td>
            </tr>
            <tr>
                <th scope="col"> Tên Smart Contract</th>
                <td scope="row">
                    <input class="form-control" id="bcname" readonly>
                </td>
            </tr>
            <tr>
                <th scope="col"> Tên ký hiệu token</th>
                <td scope="row">
                    <input class="form-control" id="bcsymbol" value="" readonly>
                </td>
            </tr>
            <tr>
                <th scope="col"> Decimal</th>
                <td scope="row">
                    <input class="form-control" id="bcdecimal" value="" readonly>
                </td>
            </tr>
        </table>

    </main>
    <footer>
        <%- include('../partials/footer'); %>
    </footer>
</body>
</html>
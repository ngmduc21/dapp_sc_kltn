<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
    <title>Chi tiết dự án</title>
    <base href="http://localhost:3000" />
    <script src="./projectDetail.js"></script>
    <style>
        #detail {margin: 20px;}
        #projectID, #leader, #numberMember {width: auto;}
        #loading {
        position: fixed;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        opacity: 0.7;
        background-color: #fff;
        z-index: 99;
      }
      #loading-image {
        z-index: 100;
      }
    </style>
</head>
<body>
    <header>
        <%- include('../partials/header'); %>
    </header>
    <main>
        <a href="/project">
            <button class="btn btn-primary">Trở lại</button>
        </a>
        
        <div id="loading">
            <img id="loading-image" src="https://plecevo.eu/i/simple_loading.gif" alt="Loading..." />
          </div>
        <div id="detail">
            <h1> Chi tiết dự án </h1> 
            <table class="table">
                <tr>
                    <th scope="col"> ID </th>
                    <td scope="row">
                        <input class="form-control" id="projectID" value="<%= data._id%>" readonly>
                    </td>
                </tr>
                <tr>
                    <th scope="col"> Ngày khởi tạo </th>
                    <td scope="row"><%= data.date%></td>
                </tr>
                <tr>
                    <th scope="col"> Tên dự án </th>
                    <td scope="row"><%= data.name%></td>
                </tr>
                <tr>
                    <th scope="col"> Khách hàng </th>
                    <td scope="row"><%= data.client%></td>
                </tr>
                <tr>
                    <th scope="col"> Leader </th>
                    <td scope="row"><%= data.leader%></td>
                    
                </tr>
                <tr>
                    <th scope="col"> Số thành viên </th>
                    <td scope="row"><%=data.numberOfMembers%></td>
                    
                    <% if(member.length){
                        for(var i = 1; i< member.length; i++) {%>
                            <tr>
                                <td scope="row"> #<%= (i) %> </td>
                                <td scope="row"><%= member[i]%></td>
                            </tr>
                            
                    <% }
                
                    }else{ %>
                        <tr>
                            <td colspan="3">Chưa có thành viên</td>
                        </tr>
                        
                        <% } %>
                </tr>
                <tr>
                    <th scope="col"> Ngân sách </th>
                    <td scope="row">
                        <text>
                            <%= data.budget%> PMC
                        </text>    
                    </td>
                </tr>
            </table>
            <a href="/project/task/<%= data._id%>">
                <button type="button" class="btn btn-primary"> Quản lý công việc </button>
            </a>
            <a href="/project/finish/<%= data._id%>">
                <button type="button" class="btn btn-primary">
                    Hoàn thành
                </button>
            </a>
            <a href="/project/addMembers/<%= data._id%>">
                <button type="button" class="btn btn-primary">
                    Thêm thành viên
                </button>
            </a>
            
            <button id="btnDelete" type="button" class="btn btn-primary">
                Xoá
            </button>
                
            
        </div>
    </main>
    <footer>
        <%- include('../partials/footer'); %>
    </footer>
</body>
</html>
<!DOCTYPE html>
<html lang="en">
<head>
    <base href="http://localhost:3000" />
    <%- include('../partials/head'); %>
    <title>Hoàn thành dự án</title>
    <script src="./scripts/web3.js"></script>
    <script src="./finishProject.js"></script>
    <style>
        #finish, #main {margin: 20px; margin-right: 20%;}
        #projectID, #leader {width: auto;}
        #infoTable {width: auto;}
        #loading {
        position: fixed;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        opacity: 0.7;
        background-color: #fff;
        z-index: 99;
      }
      #loading-image {
        z-index: 100;
      }
    </style>
</head>
<body>
    <header>
        <%- include('../partials/header'); %>
    </header>
    <main>
        <a href="/project/<%= data._id%>">
            <button class="btn btn-primary">Trở lại</button>
        </a>
        <div id="loading">
            <img id="loading-image" src="https://plecevo.eu/i/simple_loading.gif" alt="Loading..." />
          </div>
        <div id="main">
            <h1> Hoàn thành dự án </h1> 
            <div>
                <button type="button" id="btnConnectMM" class="btn btn-primary"> Kết nối với Ví MetaMask </button>
            </div>
            <h3>Thông tin dự án</h3>
            <div id="finish">
                <table id="infoTable" class="table">
                    <tr>
                        <th scope="col"> ID </th>
                        <td scope="row">
                            <input class="form-control" id="projectID" value="<%= data._id%>" readonly>
                        </td>
                    </tr>
                    <tr>
                        <th scope="col"> Tên dự án </th>
                        <td  scope="row"><%= data.name%></td>
                    </tr>
                    <tr>
                        <th scope="col"> Ngân sách </th>
                        <td  scope="row"><%= data.budget%> PMC</td>
                    </tr>
                </table>
            </div>
            <br>
            <h3>
                Kết quả thực hiện
            </h3>
            <div>
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Tên thành viên</th>
                            <th scope="col">Tác vụ hoàn thành</th>
                            <th scope="col">Tổng thưởng</th>
                        </tr>
                    </thead>
                    <tbody>
                        
                        <% if(name1){%>
                            <tr>
                                <th scope="row">1</th>
                                <td><%= name1%></td>
                                <td><%= taskName1%></td>
                                <td><%= point1%></td>
                            </tr>
                        <%}if(name2){%>
                            <tr>
                                <th scope="row">2</th>
                                <td><%= name2%></td>
                                <td><%= taskName2%></td>
                                <td><%= point2%></td>
                            </tr> 
                        <%}if(name3){%>
                            <tr>
                                <th scope="row">3</th>
                                <td><%= name3%></td>
                                <td><%= taskName3%></td>
                                <td><%= point3%></td>
                            </tr>   
                        <%}else{ %>
                            <tr>
                                <td colspan="3">No task</td>
                            </tr>
                            <% } %>
                    </tbody>
                </table>
            </div>
            <div>
                <button type="button" class="btn btn-primary" id="btnFinishProject">
                    Kết thúc và trả thưởng
                </button>
            </div>
        </div>
    </main>
    <footer>
        <%- include('../partials/footer'); %>
    </footer>
    
</body>
</html>
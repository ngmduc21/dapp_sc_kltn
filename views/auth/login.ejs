<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
    <base href="http://localhost:3000" />
    <title>Đăng nhập vào hệ thống</title>
    <script src="./login.js"></script>
    <style>
        #frmLogin {margin: 15px;}
        #loading {
        position: fixed;
        display: flex;
        justify-content: center;
        align-items: center;
        width: 100%;
        height: 100%;
        top: 0;
        left: 0;
        opacity: 0.7;
        background-color: #fff;
        z-index: 99;
      }
      #loading-image {
        z-index: 100;
      }
    </style>
</head>
<body>
    <header>
        <%- include('../partials/header'); %>
    </header>
    <main>
        <div id="loading">
            <img id="loading-image" src="https://plecevo.eu/i/simple_loading.gif" alt="Loading..." />
          </div>
        <h1 class="mb-5 text-primary">Performance Managerment</h1>
        <h2 class="ml-5">Login</h2>
        <div id="frmLogin">
            
            <form>
                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="email" placeholder="example" aria-describedby="nameHelp">
                    <label for="email" class="form-label">Địa chỉ Email</label>
                    <div id="nameHelp" class="form-text">Email được cấp để đăng nhập hệ thống.</div>
                </div>
                <div class="form-floating mb-3">
                    <input type="password" id="passwd" class="form-control" placeholder="example" aria-describedby="clientHelp">
                    <label for="passwd" class="form-label">Password</label>
                <div id="clientHelp" class="form-text"> Nhập mật khẩu</div>
                </div>
                <button type="button" id="btnLogin" class="btn btn-primary">Đăng nhập</button>
            </form>
        </div>
        
    </main>
    
</body>
</html>


<!DOCTYPE html>
<html lang="en">
    <style>
        .center-parent {
          text-align: center;
        }
        </style>
<head>
    <%- include('../partials/head'); %>
    <title>Danh sách nhân viên</title>
</head>
<body>
    <header>
        <%- include('../partials/header'); %>
    </header>
    <main>
        <%- include('../partials/users/sidenav'); %>
        <h1 class="center-parent"> Danh sách nhân viên</h1>
        <div class="center-parent">
        <a href="/users/create">
            <button type="button" class="btn btn-primary">
                Thêm nhân viên mới</button>
        </a>
        </div>

        <div>
            <br>
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">STT</th>
                        <th scope="col">Họ tên</th>
                        <th scope="col">Mã nhân viên</th>
                        <th scope="col">Email</th>
                        <th scope="col">Số điện thoại</th>
                        <th scope="col">Địa chỉ ví</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    <% if(data.length){
                
                        for(var i = 0; i< data.length; i++) {%>  
                        <tr>
                            <th scope="row"><%= (i+1) %></th>
                            <td><%= data[i].name%></td>
                            <td><%= data[i].employeeID%></td>
                            <td><%= data[i].email%></td>
                            <td><%= data[i].phone%></td>
                            <td><%= data[i].walletAddress%></td>
                            <td>
                                <a href="/users/<%= data[i]._id%>" > 
                                    <button class="btn btn-primary">Chi tiết</button>
                                </a>
                            </td>
                        </tr>
                        <% }
                                
                        }else{ %>
                            <tr>
                                <td colspan="3">No project</td>
                            </tr>
                            <% } %> 
                </tbody>
            </table>
        </div>
    </main>
    <footer>
        <%- include('../partials/footer'); %>
    </footer>
</body>
</html>